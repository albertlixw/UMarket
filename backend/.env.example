#replace <project-ref> with your project ID.
SUPABASE_URL=https://<project-ref>.supabase.co

# API key used to authenticate with supabase REST. Use the service role key for server side requests
SUPABASE_API_KEY=your-supabase-service-key

# JWT secret used to validate Supabase access tokens (Settings -> API -> JWT secret)
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Column name used as the primary identifier for transactions (set to prod_id if your table omits an id column)
SUPABASE_TRANSACTION_ID_FIELD=id

# Comma separated list of allowed frontend origins for CORS
FRONTEND_URLS=http://localhost:3000
